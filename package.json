{
  "name": "pbtar_frontend",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "description": "Front-end for the pathways-based transition assessment repository (pbtar)",
  "main": "main.jsx",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_OPTIONS=--disable-warning=ExperimentalWarning vite build --mode ${VITE_BUILD_MODE:-development}",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "json:check": "npm run json:check:srcdata && npm run json:check:testdata",
    "json:check:srcdata": "npx ts-node --esm scripts/schema-check-files.ts src/data",
    "json:check:testdata": "npx ts-node --esm scripts/schema-check-files.ts testdata/valid",
    "docs:jsonSchema": "scripts/generate-schema-docs.sh",
    "prepare:tarball": "npm ci && npm run build && tar -czf dist.tgz -C dist ."
  },
  "author": "RMI",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "i18n-iso-countries": "^7.14.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@jirutka/ajv-cli": "^6.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "simple-git": "^3.28.0",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "release": {
    "branches": [
      "production",
      {
        "name": "main",
        "prerelease": "dev"
      },
      {
        "name": "next",
        "prerelease": "rc"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features",
                "hidden": false
              },
              {
                "type": "fix",
                "section": "Fixes",
                "hidden": false
              },
              {
                "type": "build",
                "section": "Build System",
                "hidden": false
              },
              {
                "type": "ci",
                "section": "Continuous Integration and Delivery (CI/CD)",
                "hidden": false
              },
              {
                "type": "docs",
                "section": "Docs",
                "hidden": false
              },
              {
                "type": "refactor",
                "section": "Refactors",
                "hidden": false
              },
              {
                "type": "perf",
                "section": "Performance",
                "hidden": false
              },
              {
                "type": "style",
                "section": "Style",
                "hidden": false
              },
              {
                "type": "test",
                "section": "Tests",
                "hidden": false
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false,
          "tarballDir": "dist"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run prepare:tarball"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "assets": [
            {
              "path": "dist.tgz",
              "label": "Built Site"
            }
          ]
        }
      ]
    ]
  }
}
