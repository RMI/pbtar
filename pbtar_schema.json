{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pbtar_schema.json",
  "title": "PBTAR Scenarios metadata Schema",
  "description": "A schema for the scenarios metadata dataset in PBTAR",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for a scenario",
        "type": "string"
      },
      "name": {
        "description": "Name of the scenario",
        "type": "string"
      },
      "description": {
        "description": "Description of the scenario",
        "type": "string"
      },
      "pathway_type": {
        "description": "Type of the scenario pathway",
        "type": "string",
        "enum": [
          "Normative",
          "Projection",
          "Policy",
          "Exploration"
        ]
      },
      "pathway_type_tooltip": {
        "description": "Detailed explanation of the scenario pathway type",
        "type": "string"
      },
      "net_zero_reached_year": {
        "description": "Year by which net zero is reached in the scenario",
        "type": ["integer", "null"],
        "minimum": 2030,
        "maximum": 2100
      },
      "carbon_budget": {
        "description": "Carbon budget of the scenario in gigatons of CO2 equivalent",
        "type": ["number", "null"],
        "minimum": 0
      },
      "model_start_year": {
        "description": "Year from which the model starts",
        "type": ["integer", "null"],
        "minimum": 1900,
        "maximum": 2025
      },
      "target_year": {
        "description": "Target year of the scenario",
        "type": "string"
      },
      "modeled_temperature_increase": {
        "description": "Modeled temperature increase expected by the scenario (in degrees Celsius)",
        "type": "number",
        "multipleOf": 0.1,
        "minimum": 0.5,
        "maximum": 3
      },
      "ssp": {
        "description": "Shared Socioeconomic Pathways (SSP) associated with the scenario",
        "type": "string",
        "enum": ["SSP1", "SSP2", "SSP3", "SSP4", "SSP5", "N/A"]
      },
      "regions": {
        "description": "Regions that the scenario covers",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "string",
          "enum": [
            "Global",
            "EU",
            "Americas",
            "Asia Pacific",
            "SEA",
            "Country-Specific"
          ]
        }
      },
      "country": {
        "description": "The country code associated with the scenario",
        "$ref": "#/definitions/countryCode"
      },
      "sectors": {
        "description": "Sectors that the scenario covers",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "enum": [
                "Agricultural",
                "Buildings",
                "Industrial",
                "Power Generation",
                "Transport"
              ]
            },
            "tooltip": {
              "type": "string",
              "description": "Detailed explanation of the sector"
            },
            "technologies": {
              "type": "array",
              "description": "Technologies applicable to this sector",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["name", "technologies"],
          "additionalProperties": false,
          "allOf": [
            {
              "if": {
                "properties": { "name": { "const": "Agricultural" } }
              },
              "then": {
                "properties": {
                  "technologies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Precision Agriculture",
                        "Agroforestry",
                        "Bioenergy Crops",
                        "Other"
                      ]
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": { "name": { "const": "Buildings" } }
              },
              "then": {
                "properties": {
                  "technologies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Energy Efficiency",
                        "Smart Grids",
                        "Renewable Heating",
                        "Heat Pumps",
                        "Building Automation",
                        "Smart Appliances",
                        "Insulation",
                        "Other"
                      ]
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": { "name": { "const": "Industrial" } }
              },
              "then": {
                "properties": {
                  "technologies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Carbon Capture and Storage",
                        "Electrification",
                        "Process Optimization",
                        "Hydrogen Use",
                        "Other"
                      ]
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": { "name": { "const": "Power Generation" } }
              },
              "then": {
                "properties": {
                  "technologies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Coal",
                        "Oil",
                        "Gas",
                        "Wind",
                        "Solar",
                        "Nuclear",
                        "Biomass",
                        "Other"
                      ]
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": { "name": { "const": "Transport" } }
              },
              "then": {
                "properties": {
                  "technologies": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Electric Vehicles",
                        "Hydrogen Vehicles",
                        "Biofuels",
                        "Public Transport",
                        "Active Mobility",
                        "Aviation Efficiency",
                        "Maritime Efficiency"
                      ]
                    }
                  }
                }
              }
            }
          ]
        }
      },
      "publisher": {
        "description": "Publisher of the scenario",
        "type": "string"
      },
      "published_date": {
        "description": "Date that the scenario was published",
        "type": "string"
      },
      "overview": {
        "description": "Overview of the scenario",
        "type": "string"
      },
      "expertRecommendation": {
        "description": "Expert recommendation for the scenario",
        "type": "string"
      },
      "dataSource": {
        "description": "Data source for the scenario",
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "url": { "type": "string" },
          "downloadAvailable": { "type": "boolean" }
        },
        "additionalProperties": false,
        "required": ["description", "url", "downloadAvailable"]
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "description",
      "pathway_type",
      "pathway_type_tooltip",
      "target_year",
      "regions",
      "sectors",
      "publisher",
      "published_date",
      "overview",
      "expertRecommendation",
      "dataSource"
    ]
  },
