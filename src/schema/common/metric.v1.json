{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://pathways.rmi.org/schema/common/metric.v1.json",
  "title": "Metric",
  "description": "Common definition of a metric used across pathway schemas.",
  "type": "object",
  "properties": {
    "displayName": {
      "$ref": "#/$defs/displayName"
    },
    "definition": {
      "type": "string",
      "description": "Detailed description of what the metric represents."
    },
    "sectorScope": {
      "type": "string",
      "description": "Scope or context within which the metric applies, if any."
    }
  },
  "required": ["displayName", "definition"],
  "additionalProperties": false,

  "$defs": {
    "displayName": {
      "description": "Display name of the metric",
      "type": "string",
      "enum": [
        "Emissions Intensity",
        "Capacity",
        "Generation",
        "Technology Mix",
        "Absolute Emissions"
      ]
    }
  }
}
